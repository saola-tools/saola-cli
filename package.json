{
  "name": "devebot-cli",
  "version": "0.2.2",
  "description": "Devebot Commandline Interface",
  "main": "lib/client.js",
  "preferGlobal": true,
  "bin": {
    "devebot": "./bin/cli"
  },
  "directories": {
    "lib": "lib/"
  },
  "files": [
    "bin/",
    "data/",
    "lib/"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "clean-modules": "rm -rf ./node_modules ./package-lock.json ./test/node_modules ./test/package-lock.json",
    "setup-modules": "npm install --ignore-scripts; npm --prefix=test install --ignore-scripts",
    "reset-modules": "npm run clean-modules && npm run setup-modules",
    "build": "npm exec -- babel ./src -d ./lib",
    "check": "npm exec -- eslint src",
    "check-silent": "npm exec -- eslint --quiet src",
    "pretest": "npm run clean && NODE_ENV=${SAOLA_NODE_ENV:-test} npm run build",
    "testOnly": "npm --prefix=test exec -- mocha --recursive ./test/tdd/*-test.js",
    "test": "npm run testOnly",
    "prepublishOnly": "npm run check-silent && npm run clean && NODE_ENV=${DEVEBOT_NODE_ENV:-production} npm run build",
    "verify": "npm run prepublishOnly && npm run testOnly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devebot/devebot-cli.git"
  },
  "keywords": [
    "devebot",
    "cli",
    "commandline"
  ],
  "author": "devebot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devebot/devebot-cli/issues"
  },
  "homepage": "https://github.com/devebot/devebot-cli#readme",
  "dependencies": {
    "app-root-path": "^2.1.0",
    "bluebird": "^3.4.0",
    "cli-table2": "^0.2.0",
    "commander": "^2.9.0",
    "devebot-api": "^0.2.2",
    "jsonschema": "^1.1.0",
    "lodash": "^4.12.0",
    "userhome": "^1.0.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "babel-plugin-minify-mangle-names": "^0.5.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-promise": "^2.0.2",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-standard": "^4.0.0"
  }
}
